#!/bin/bash

docker exec -it {{ mongodb_shard1_container_name }} bash -c "echo 'rs.initiate({_id : \"{{ shard1_set_name }}\", version: 1, members: [{ _id : 0, host : \"{{ host1 }}:{{ mongodb_shard1_port }}\" },{ _id : 1, host : \"{{ host2 }}:{{ mongodb_shard1_port }}\" },{ _id : 2, host : \"{{ host3 }}:{{ mongodb_shard1_port }}\" }]})' | mongo admin -u {{ mongo_admin }} -p {{ mongo_password }}"